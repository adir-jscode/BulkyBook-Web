@model List<Category>

@*@if(TempData["success"] !=null)
{
    <h2>@TempData["success"]</h2>
}*@

@*<partial name="_Notification" ></partial>*@

<div class="container">
    <div class="row pt-4">
        <div class="col-md-6">
            <h1>Category List</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle-fill"></i> Create Category</a>
        </div>
    </div>
</div>


<table class="table table-bordered table-stripped">
    <thead>
<tr>
            <th>
                ID
            </th>
            <th>
                 Name
            </th>
            <th>
              Display Order
            </th>
            <th></th>
        </tr>
    </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
            {
            <tr>
                <td>
                    @obj.CategoryId
                </td>
                <td>
                        @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.CategoryId" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.CategoryId" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
            }
        </tbody>
        


</table>