@model Product




<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h1>Delete Product</h1>
            <hr />
        </div>
        @*<div asp-validation-summary="All" ></div>*@
        @*<div asp-validation-summary="ModelOnly"></div>*@
        @* <div asp-validation-summary="None"></div>*@
        <div class="mb-6 row">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-6 row">
            <></>
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" /textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-6 row">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" disabled class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-6 row">
            <label asp-for="Author"></label>
            <input asp-for="Author" disabled class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-6 row">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-6 row">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" disabled class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-6 row">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" disabled class="form-control" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="mb-6 row">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" disabled class="form-control" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>


        <div class="row pt-4">
            <div class="col-6 col-md-3">
                <button asp-controller="Product" asp-action="Delete" type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>



</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
        }