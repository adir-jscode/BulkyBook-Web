@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row">
            <h1>Edit Category</h1>
            <hr />
        </div>
        @*<div asp-validation-summary="All" ></div>*@
        @*<div asp-validation-summary="ModelOnly"></div>*@
        @* <div asp-validation-summary="None"></div>*@
        <div class="mb-6 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-6 row">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row pt-4">
            <div class="col-6 col-md-3">
                <button asp-controller="Category" asp-action="Edit" type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>



</form>

