@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-md-6">
            <h1>Category List</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle-fill"></i> Create Category</a>
        </div>
    </div>
</div>


<table class="table table-bordered table-stripped">
    <thead>
<tr>
            <th>
                ID
            </th>
            <th>
                 Name
            </th>
            <th>
              Display Order
            </th>
        </tr>
    </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
            {
            <tr>
                <td>
                        @obj.Id
                </td>
                <td>
                        @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
            </tr>
            }
        </tbody>
        


</table>